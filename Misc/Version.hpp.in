#pragma once

#include "Polly/StringView.hpp"

namespace Polly
{
struct Version
{
    int major    = 0;
    int minor    = 0;
    int revision = 0;
};

/// Gets the currently used version of Polly.
static constexpr auto version = Version{ ${polly_version_major}, ${polly_version_minor}, ${polly_version_revision} };

/// Gets the currently used version of Polly as a display string.
static constexpr auto versionString = "${polly_version_major}.${polly_version_minor}.${polly_version_revision}"_sv;
}